# Crypto Paste Environment Variables Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env files to version control

# Application Environment
ENVIRONMENT=development
NODE_ENV=development

# Cloudflare Configuration
CLOUDFLARE_API_TOKEN=your_cloudflare_api_token_here
CLOUDFLARE_ACCOUNT_ID=your_account_id_here
CLOUDFLARE_ZONE_ID=your_zone_id_here

# KV Namespace Configuration
KV_NAMESPACE_PRODUCTION=your_production_kv_namespace_id
KV_NAMESPACE_PREVIEW=your_preview_kv_namespace_id
KV_NAMESPACE_STAGING=your_staging_kv_namespace_id

# Security Settings
ENCRYPTION_KEY=your_32_character_encryption_key
ADMIN_API_KEY=your_secure_admin_api_key
JWT_SECRET=your_jwt_secret_key

# Rate Limiting Configuration
RATE_LIMIT_REQUESTS=10
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_BURST=20

# Content Limits
MAX_PASTE_SIZE=1048576
MAX_TITLE_LENGTH=200
MAX_PASSWORD_LENGTH=128

# Feature Flags
ANALYTICS_ENABLED=true
CAPTCHA_ENABLED=false
CONTENT_ENCRYPTION=true
AUDIT_LOGGING=true

# External Services (if needed)
DATABASE_URL=postgresql://username:password@host:port/database
REDIS_URL=redis://username:password@host:port
ANALYTICS_TOKEN=your_analytics_service_token

# Development Settings
DEBUG_MODE=false
VERBOSE_LOGGING=false
MOCK_EXTERNAL_SERVICES=false

# Monitoring & Alerting
SENTRY_DSN=your_sentry_dsn_here
WEBHOOK_URL=your_monitoring_webhook_url

# CORS Configuration
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
ALLOWED_METHODS=GET,POST,OPTIONS
ALLOWED_HEADERS=Content-Type,Authorization,X-Requested-With

# Cache Settings
CACHE_TTL_PASTES=86400
CACHE_TTL_STATIC=3600
CACHE_TTL_API=300

# Backup & Retention
BACKUP_ENABLED=true
BACKUP_FREQUENCY=daily
DATA_RETENTION_DAYS=365
AUDIT_RETENTION_DAYS=90 